{
    "apps": [
        {
            "name": "discord-bot",
            "script": "./src/bin/www.ts",
            "max_memory_restart": "600M",
            "cron_restart": "0 * * * *",
            "autorestart": true,
            "exp_backoff_restart_delay": 100,
            "ignore_watch": [
                "node_modules",
                "public/images",
                "logs"
            ],
            "watch_options": {
                "followSymlinks": false
            },
            "exec_mode": "cluster"
        }
    ]
}